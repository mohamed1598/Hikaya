
@{
    ViewBag.Title = "addPlot";
}

@model hikaya.Models.StoryPlot

<h2>addPlot</h2>
<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-2">@Html.LabelFor(n => n.text)</div>
        <div class="col-10">@Html.TextAreaFor(n => n.text, new { @class = "col-12",style="height:100px;margin:20px" })</div>
    </div>
    <div class="row">
        <div class="col-3">@Html.LabelFor(n => n.sort)</div>
        <div class="col-3">@Html.EditorFor(n => n.sort, new { @class = "col-12" })</div>
    </div>
    <div class="row">
        <div class="col-3">image</div>
        <div class="col-3"><input type="file" name="photo" /></div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-3"><input type="submit" value="add plot" /></div>
    </div>
</form>

