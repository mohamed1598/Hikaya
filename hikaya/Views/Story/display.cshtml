
@{
    ViewBag.Title = "display";
}

@model List<hikaya.Models.Story>

<br /><br />
@Html.ActionLink("Create Story", "create", "Story", new { area = "" }, new { @class = "btn btn-primary" })
<br />
<h2>My Stories</h2>
<table class="table table-success table-striped ">
    <tr>
        <th>Story id</th>
        <th>Story name</th>
        <th>post date</th>
        <th>tags</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @foreach(var item in Model)
    {
<tr>
    <td>@item.id</td>
    <td>@item.title</td>
    <td>@item.postDate</td>
    <td>@item.tags</td>
    <td>@Html.ActionLink("add plot", "addPlot", "Story", new { id = item.id }, new { @class = "btn btn-primary" })</td>
    <td>@Html.ActionLink("view story", "viewStory", "Story", new { id = item.id }, new { @class = "btn btn-info" })</td>
    <td>@Html.ActionLink("Remove", "removeStory", "Story", new { id = item.id }, new { @class = "btn btn-danger" })</td>
</tr>
    }
</table>
