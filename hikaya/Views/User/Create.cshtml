
@{
    ViewBag.Title = "Create";
}

@model hikaya.Models.User

<h2>Register</h2>
<form method="post" class="row">
    <div class="col-9">
        <div class="row">
            <div class="col-3">
                @Html.LabelFor(n => n.name)
            </div>
            <div class="col-6">
                @Html.EditorFor(n => n.name)
            </div>
            <div class="col-3">
                @Html.ValidationMessageFor(n=>n.name)
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                @Html.LabelFor(n => n.email)
            </div>
            <div class="col-6">
                @Html.EditorFor(n => n.email)
            </div>
            <div class="col-3">
                @Html.ValidationMessageFor(n => n.email)
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                @Html.LabelFor(n => n.password)
            </div>
            <div class="col-6">
                @Html.PasswordFor(n => n.password)
            </div>
            <div class="col-3">
                @Html.ValidationMessageFor(n => n.password)
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                @Html.LabelFor(n => n.confirm_password)
            </div>
            <div class="col-6">
                @Html.PasswordFor(n => n.confirm_password)
            </div>
            <div class="col-3">
                @Html.ValidationMessageFor(n => n.confirm_password)
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                
            </div>
            <div class="col-6">
                <input type="submit" value="Register" />
            </div>
        </div>
    </div>
    
</form>
