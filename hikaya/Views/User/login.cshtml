
@{
    ViewBag.Title = "login";
}

@model hikaya.Models.User

<h2>login</h2>
<form method="post" class="row">
    <div class="col-6">
        <div class="row">
            <div class="col-4">
                @Html.LabelFor(n => n.email)
            </div>
            <div class="col-8">
                @Html.EditorFor(n => n.email)
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                @Html.LabelFor(n => n.password)
            </div>
            <div class="col-8">
                @Html.PasswordFor(n => n.password)
            </div>
        </div>
        <div class="row">
            <div class="col-4">

            </div>
            <div class="col-8">
                <input type="submit" value="login" />
            </div>
        </div>
    </div>

</form>
