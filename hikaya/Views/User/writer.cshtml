
@{
    ViewBag.Title = "writer";
    string text = ViewBag.username;
}

@model List<hikaya.Models.Story>
<br /><br />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="card col-4">
            <h5 class="card-header">@item.title</h5>
            <div class="card-body">
                <h5 class="card-title">
                    @Html.ActionLink(text, "writer", "User", new { id = item.id })
                </h5>
                <p class="card-text">@item.tags</p>
                @Html.ActionLink("Read", "viewStory", "Admin", new { id = item.id }, new { @class = "btn btn-primary" })
            </div>
        </div>
    }
</div>

